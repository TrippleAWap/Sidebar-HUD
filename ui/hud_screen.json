{
  // <- -x +x ->  ^ -y +y v
  "namespace": "hud",
  "hud_title_text": {
    "alpha": 1,
    "size": ["100%", "100%"],
    "controls": [
      {
        "sidebar": {
          "type": "panel",
          "controls": [
            {
              "title_text": {
                "type": "image",
                "offset": [-5, 0],
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "size": ["100%c + 10px", "100%c + 10px"],
                "texture": "textures/ui/right_background",
                "controls": [
                  {
                    "text": {
                      "type": "label",
                      "text_alignment": "left",
                      "text": "$title_text",
                      "font_scale_factor": 1,
                      "layer": 1
                    }
                  }
                ]
              }
            },
            {
              "logo_image": {
                "type": "image",
                "size": [100, 100],
                "offset": [-17, -40], // change this to move the logo
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "texture": "textures/ui/logo"
              }
            }
          ]
        }
      }
    ]
  },
  "hud_actionbar_text": {
    "type": "panel",
    "offset": [0, 0],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "image": {
          "type": "image",
          "size": ["100%c + 10px", "100%c + 10px"],
          "alpha": "@hud.anim_alpha_out", // make this 0 to hide background
          "texture": "textures/ui/actionbar_background",
          "controls": [
            {
              "text": {
                "type": "label",
                "text_alignment": "center",
                "text": "$actionbar_text",
                "font_type": "smooth",
                "font_scale_factor": 1.2,
                "layer": 1,
                "alpha": "@hud.anim_alpha_out"
              }
            }
          ]
        }
      }
    ]
  },
  "anim_alpha_out": {
    "anim_type": "alpha",
    "easing": "in_expo",
    "duration": 3,
    "from": 1.0,
    "to": 0,
    "destroy_at_end": "hud_actionbar_text"
  }
}

